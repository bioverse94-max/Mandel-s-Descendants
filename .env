# Security
SSL_CERT=certs/server.crt
SSL_KEY=certs/server.key
ELASTIC_PASSWORD=bioverse_secure_elastic
REDIS_PASSWORD=bioverse_secure_redis
GRAFANA_PASSWORD=bioverse_secure_grafana

# Service configuration
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
PORT=8443

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=BioVerse API

# CORS Configuration (update with your frontend URL in production)
BACKEND_CORS_ORIGINS=["*"]

# Cache Configuration
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_PER_SECOND=10

# SciBERT Configuration
SCIBERT_URL=https://scibert:8443
MODEL_BATCH_SIZE=32
MODEL_MAX_LENGTH=512

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus-multiproc